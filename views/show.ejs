<!-- header  -->
<%- include("./partials/header")%>

<div class="ui main text container segment">
    <div class="ui huge header">
        <%= post.title%>
    </div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= post.image%>" alt="">
            <div class="content">
                <span><%= post.created.toDateString()%></span>
                <hr>

            </div>
            <div class="description">
                <p><%= post.body%></p>
            </div>
            <hr>
            <div class="ui inverted segment">
                <a href="/blogs/<%= post._id%>/edit" class="ui inverted purple button">Edit Post</a>
                <form action="/blogs/<%= post._id %>?_method=DELETE" method="POST" id="deleteForm">
                    <button class="ui inverted red button">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- footer  -->
<%- include("./partials/footer")%>